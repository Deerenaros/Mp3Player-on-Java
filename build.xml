<project name="GUAP Player" default="compile" basedir=".">	<description>		GUAP Player's build file for ant.	</description>	<!-- set global properties for this build -->	<property name="src" value="sources"/>	<property name="build" value="build"/>	<property name="dist"  value="dist"/>	<property name="lib.dir" value="libs"/>		<path id="classpath">		<pathelement path="${classpath}"/>		<fileset dir="libs">			<include name="**/*.jar"/>		</fileset>	</path>	<!--project>	<path id="base.path">		<pathelement path="${classpath}"/>		<fileset dir="lib">			<include name="**/*.jar"/>		</fileset>	</path>	<target name="build" >		<javac ...>			<classpath refid="base.path"/>		</javac>	</target></project-->		<target name="init">		<tstamp/>		<mkdir dir="${build}"/>        <mkdir dir="${dist}"/>	</target>	<target name="compile" depends="init" description="Compile the source." >		<javac srcdir="${src}" destdir="${build}" classpathref="classpath" />	</target>	<target name="dist" depends="init">        <jar destfile="${dist}/dist.jar" basedir="${build}">            <manifest>                <attribute name="Main-Class" value="ru.guap.player.Main"/>            </manifest>        </jar>    </target>		<target name="run" depends="dist">        <java fork="true" classname="ru.guap.player.Main">            <classpath>                <path refid="classpath"/>                <path location="${dist}/dist.jar"/>            </classpath>        </java>    </target>		<target name="clean" description="Deletes build-classes and dist-jars.">		<delete dir="${build}"/>		<delete dir="${dist}"/>	</target></project>