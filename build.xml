<project name="GUAP Player" default="compile" basedir=".">	<description>		GUAP Player's build file for ant.	</description>	<!-- set global properties for this build -->	<property name="src" value="sources"/>	<property name="build" value="build"/>	<property name="dist"  value="dist"/>	<property name="lib.dir" value="libs"/>	<path id="classpath">        <fileset dir="${lib.dir}" includes="libs/*.jar"/>    </path>		<target name="init">		<tstamp/>		<mkdir dir="${build}"/>        <mkdir dir="${dist}"/>	</target>	<target name="compile" depends="init" description="Compile the source." >		<javac srcdir="${src}" destdir="${build}" classpathref="classpath">		</javac>	</target>	<target name="dist" depends="init">        <jar destfile="${dist}/dist.jar" basedir="${build}">            <manifest>                <attribute name="Main-Class" value="ru.guap.player.Main"/>            </manifest>        </jar>    </target>		<target name="run" depends="dist">        <java fork="true" classname="ru.guap.player.Main">            <classpath>                <path refid="classpath"/>                <path location="${dist}/dist.jar"/>            </classpath>        </java>    </target>		<target name="clean" description="Deletes build-classes and dist-jars.">		<delete dir="${build}"/>		<delete dir="${dist}"/>	</target></project>