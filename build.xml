<project name="GUAP Player" default="compile" basedir=".">	<description>		GUAP Player's build file for ant.	</description>	<!-- set global properties for this build -->	<property name="src" value="sources"/>	<property name="build" value="build"/>	<property name="dist"  value="dist"/>	<property name="libdir" value="libs"/>	<property name="class.main" value="ru.guap.practice.player.controller.Controller"/>		<path id="classpath">		<pathelement path="${classpath}"/>		<fileset dir="${libdir}">			<include name="**/*.jar"/>		</fileset>	</path>		<target name="init">		<tstamp/>		<mkdir dir="${build}"/>        <mkdir dir="${dist}"/>	</target>	<target name="compile" depends="init" description="Compile the source." >		<javac srcdir="${src}" destdir="${build}" classpathref="classpath" />	</target>	<target name="dist" depends="compile">        <jar destfile="${dist}/dist.jar" basedir="${build}">            <manifest>                <attribute name="Main-Class" value="${class.main}"/>            </manifest>        </jar>    </target>		<target name="run" depends="dist">        <java fork="true" classname="${class.main}">            <classpath>                <path refid="classpath"/>                <path location="${dist}/dist.jar"/>            </classpath>        </java>    </target>		<target name="clean" description="Deletes build-classes and dist-jars.">		<delete dir="${build}"/>		<delete dir="${dist}"/>		<delete dir="${dist}"/>	</target></project>